<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Produtos Cadastrados no Sistema</h3>
        </div>
        <div class="panel-body">
          <input type="text" class="form-control" id="dev-table-filter" data-action="filter"
                 data-filters="#dev-table" placeholder="Filtrar Produtos" />
        </div>
        <table class="table table-hover" id="dev-table">
          <thead>
          <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Preco</th>
            <th colspan="3"> Ações</th>
          </tr>
          </thead>
          <tbody>
          <tbody>
          <% @produtos.each do |produto| %>
            <tr>
              <td><%= produto.id %></td>
              <td><%= produto.nome %></td>
              <td><%= produto.preco %></td>
              <td><%= link_to 'Show', produto %></td>
              <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
              <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
          </tbody>
          </tbody>
        </table>
      </div>
    </div>

    <br>

<%= link_to 'New Produto', new_produto_path %>
