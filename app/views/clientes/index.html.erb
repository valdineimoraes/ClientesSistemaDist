<p id="notice"><%= notice %></p>

<h1>SystemDist</h1>

<div class="container">
    	<div class="row">
			<div class="col-md-12">
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h3 class="panel-title">Clientes Cadastrados no Sistema</h3>
					</div>
					<div class="panel-body">
						<input type="text" class="form-control" id="dev-table-filter" data-action="filter" 
                                  data-filters="#dev-table" placeholder="Filtrar Clientes" />
					</div>
					<table class="table table-hover" id="dev-table">
						<thead>
							<tr>
                <th>#</th>
                <th>Nome</th>
                <th>Tel</th>
                <th>Cep</th>
                <th>Rua</th>
                <th>Numero</th>
                <th>Bairro</th>
                <th>Cidade</th>
                <th>Uf</th>
                <th colspan="3"> Ações</th>
              </tr>
						</thead>
						<tbody>
							<tbody>
                <% @clientes.each do |cliente| %>
                  <tr>
                    <td><%= cliente.id%>
                    <td><%= cliente.nome %></td>
                    <td><%= cliente.tel %></td>
                    <td><%= cliente.cep %></td>
                    <td><%= cliente.rua %></td>
                    <td><%= cliente.numero %></td>
                    <td><%= cliente.bairro %></td>
                    <td><%= cliente.cidade %></td>
                    <td><%= cliente.uf %></td>
                    <td><%= link_to 'Show', cliente %></td>
                    <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
                    <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
						</tbody>
					</table>
				</div>
			</div>

<br>

